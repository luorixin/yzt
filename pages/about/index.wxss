/* pages/about/index.wxss */
page
.about-container{
  background: #f5f5f9;
  width: 100%;
  height: 100%;
  padding: 10px;
  font-size: 24rpx;
  box-sizing: border-box;
}
.about-container .about-title{
  text-align: left;
  font-weight: bold;
  float: left;
  display: block;
}
.about-container text{
  font-size: 24rpx;
  line-height: 40rpx;
  display: block;
}
.about-btn-area{
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
}

.about-btn-area .form-btn{
  background: #5690CA;
  color: #fff;
  width: 312rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  margin: auto;
}