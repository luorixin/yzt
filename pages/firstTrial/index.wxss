.info-container{
  width: 460rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin: 60rpx auto;
}
.info-container icon{
  text-align: center;
}
.info-container text{
  text-align: center;
  font-size: 24rpx;
  margin: 40rpx auto;
  line-height: 60rpx;
}
.info-container button{
  color: #333;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
}